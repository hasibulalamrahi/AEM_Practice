<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Author Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <details
                            cq:showOnCreate="{Boolean}false"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Details"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <container
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <fname
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="First Name"
                                            name="./fname"/>
                                    <lname
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Last Name"
                                            name="./lname"/>
                                    <age
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                            fieldLabel="Age"
                                            name="./age"/>
                                    <dob
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                            fieldLabel="Date of Birth"
                                            name="./dob"/>
                                    <buttonType
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                            name="./buttonType"
                                            fieldLabel="Button Type">
                                        <items jcr:primaryType="nt:unstructured">
                                            <tangerine
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/radio"

                                                    text="Tangerine"
                                                    value="tangerine"/>
                                            <light
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/radio"
                                                    text="Light"
                                                    value="light"/>
                                            <dark
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/radio"
                                                    text="Dark"
                                                    value="dark"/>
                                        </items>
                                    </buttonType>
                                    <isAuthor
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldLabel="Author?"
                                            value="Auhor"
                                            text="Auhtor?"
                                            uncheckedValue="Not Author"
                                            checked="true"
                                            name="./isAuthor"
                                            fieldDescription="Describes the whole component"
                                    />
                                    <isActiveAuthor
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                            fieldLabel="Is Active Author?"
                                            value="Active"
                                            uncheckedValue="Not Active"
                                            text="Active Author"
                                            checked="true"
                                            name="./isActiveAuthor"
                                    />
                                    <publicationNo
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            name="./publicationNo"

                                            fieldLabel="Please select the number of Publications">
                                        <items jcr:primaryType="nt:unstructured">
                                            <basic
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    text="Basic"
                                                    selected="true"
                                                    value="Basic"/>
                                            <mid
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    selected="false"
                                                    text="Mid"
                                                    value="mid"/>
                                            <advance
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    selected="false"
                                                    text="Advance"
                                                    value="advance"/>
                                        </items>
                                    </publicationNo>
                                    //image upload starts here

                                    <desktopSection
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                            maximized="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <desktopContainer
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Name of Publications"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    maximized="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <novels
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Novels"
                                                            name="./novels"/>
                                                    <poems
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Poems"
                                                            name="./poems"/>
                                                </items>
                                                <parentConfig
                                                        jcr:primaryType="nt:unstructured"
                                                        active="{Boolean}true"/>
                                            </desktopContainer>
                                        </items>
                                    </desktopSection>
                                </items>
                            </container>
                        </items>
                    </details>
                    <about
                            cq:showOnCreate="{Boolean}false"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="about"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <container
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <heroBannerBackgroundPosterImage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                            allowUpload="{Boolean}false"
                                            autoStart="{Boolean}false"
                                            class="cq-droptarget"
                                            fileNameParameter="./heroBannerBackgroundPosterImageFile"
                                            fileReferenceParameter="./heroBannerBackgroundPosterImageReference"
                                            mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                            multiple="{Boolean}false"
                                            name="./heroBannerBackgroundPosterImage"
                                            title="Hero Banner Poster"
                                            fieldLabel="Poster Image"
                                            fieldDescription="Upload Hero Banner Poster Image"
                                            useHTML5="{Boolean}true"/>
                                </items>
                            </container>
                        </items>
                    </about>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>